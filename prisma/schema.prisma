datasource db {
  provider = "sqlite"
  url      = "file:../data/manga.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String?  @unique
  passwordHash String
  role         String   @default("admin")
  createdAt    DateTime @default(now())
  avatarUrl    String?
  headerUrl    String?

  sessions Session[]
}

model LibraryPath {
  id        Int      @id @default(autoincrement())
  path      String
  createdAt DateTime @default(now())

  volumes Volume[]
}

model Volume {
  id            Int      @id @default(autoincrement())
  title         String
  author        String?
  filePath      String   @unique
  thumbnailPath String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  libraryPathId Int?

  libraryPath LibraryPath? @relation(fields: [libraryPathId], references: [id])
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}
